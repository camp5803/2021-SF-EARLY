<!doctype html>
<html class="theme-dark theme-font">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>SecurityFirst CTF 2021</title>
        <!---->
        <link rel="stylesheet" href="<%=route%>css/theme.css">
        <link rel="stylesheet" href="<%=route%>css/controls.css">
        <link rel="stylesheet" href="<%=route%>css/common.css">
    </head>
    <body>
        <div class="navbar">
            <div class="navbar-content">
                <div class="navbar-item-title secu-title-s">
                    <a class="navbar-link-logo" href="/">SECURITYFIRST</a>
                </div>
                <div class="navbar-item">
                    <a class="navbar-link navbar-link-active" href="/notice">NOTICE</a>
                </div>
                <div class="navbar-item">
                    <a class="navbar-link" href="/ranking">SCOREBOARD</a>
                </div>
                <div class="navbar-item">
                    <a class="navbar-link" href="/chall">CHALLENGE</a>
                </div>
                <div class="navbar-item navbar-item-profile">
                    <a class="navbar-link" href="/profile">PROFILE</a>
                </div>
                <div class="navbar-item">
                    <a class="navbar-link" href="/logout">LOGOUT</a>
                </div>
                <% if (sess.users.mem_type == "Admin") { %>
                <div class="navbar-item">
                    <a class="navbar-link" href="/kingkingsecu">ADMIN</a>
                </div>
                <% } %>
            </div>
        </div>
        <div id="ingame-root">
            <div class="ingame-content">
                <div class="notice-detail-container">
                    <div class="notice-detail-item">
                        <div class="notice-detail-title">
                            <%=data.title%>
                        </div>
                    </div>
                    <div class="notice-detail-item">
                        <div class="notice-detail-date">
                            <%=data.created_at.toString().replace('GMT+0900 (대한민국 표준시)', '')%>
                        </div>
                    </div>
                    <div class="notice-detail-item">
                        <div class="notice-detail-item-divider-h">
                            <hr class="divider" />
                        </div>
                    </div>
                    <div class="notice-detail-item">
                        <div class="notice-detail-text">
                            <p><%-data.content%></p>
                        </div>
                    </div>
                    <div class="notice-detail-item notice-detail-item-back-button">
                        <div class="notice-detail-back-button">
                            <a class="button-primary-tile" href="/notice">돌아가기</a>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </body>
</html>